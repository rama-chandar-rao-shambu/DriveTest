<!DOCTYPE html>
<html lang="en">
    <%-include('layouts/header');-%>
    <body>
        <!-- Navigation-->
        <%-include('layouts/navbar');-%>

        
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/driveTest.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>LOGIN</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <p>Registered Member? please login and pick your drive test time slot </p>
                    <% if(success != null && success.length > 0 && isRegister){ %>
                        <ul class="list-group"></ul>
                            <% for (let i = 0; i < success.length; i++) { %>
                                <li class="list-group-item list-group-item-success"><%= success[i] %></li>
                            <% } %>
                        </ul>
                        <br>
                    <% } %>
                    <div class="col-md">
                        <h2>Registration</h2>
                        <div class="my-5">
                            <% if(errors != null && errors.length > 0 && isRegister){ %>
                                <ul class="list-group"></ul>
                                    <% for (let i = 0; i < errors.length; i++) { %>
                                        <li class="list-group-item list-group-item-danger"><%= errors[i] %></li>
                                    <% } %>
                                </ul>
                            <% } %>
                            <form id="registrationForm" data-sb-form-api-token="API_TOKEN" action="register" method="POST">
                                <div class="form-floating">
                                    <input class="form-control" id="uname"  pattern="^[a-zA-Z0-9]{3,}$" name="username" type="text" value="<%= isRegister ? username: '' %>" placeholder="Enter your name..." data-sb-validations="required" />
                                    <label for="username">Name</label>
                                    <div class="invalid-feedback" data-sb-feedback="username:required">username is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="pwd" name="password" type="password" value="<%= isRegister ? password : ''%>" placeholder="Enter your password..." data-sb-validations="required" />
                                    <label for="password">Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="password:required">Password is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="repeatPwd" name="repeatPwd" type="password" placeholder="Enter your password..." data-sb-validations="required" />
                                    <label for="repeatPwd">Re-enter Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="repeatPwd:required">Password is required.</div>
                                </div>
                                <div class="form-floating dropdown" id="userSelect">
                                    <label for="userType">User Type</label>
                                    <select name="userType" id="userType" value="<%= isRegister ? userType : 'Driver' %>">
                                      <option value="Driver">Driver</option>
                                      <option value="Examiner">Examiner</option>
                                      <option value="Admin">Admin</option>
                                    </select>
                                  </div>
                                <br />
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="register" type="submit">Register</button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md">
                        <h2>Login</h2>
                        <div class="my-5">
                            <% if(errors != null && errors.length > 0 && !isRegister){ %>
                                <ul class="list-group"></ul>
                                    <% for (let i = 0; i < errors.length; i++) { %>
                                        <li class="list-group-item list-group-item-danger"><%= errors[i] %></li>
                                    <% } %>
                                </ul>
                            <% } %>
                            <form id="loginForm" data-sb-form-api-token="API_TOKEN" action="login" method="POST">
                                <div class="form-floating">
                                    <input class="form-control" id="name" name="username" value="<%= username %>" pattern="^[a-zA-Z0-9]{3,}$" type="text" placeholder="Enter your name..." data-sb-validations="required" />
                                    <label for="username">Name</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="password" name="password" type="password" value="<%= password %>" placeholder="Enter your password..." data-sb-validations="required" />
                                    <label for="password">Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="email:required">Password is required.</div>
                                </div>
                                <br />
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        <%-include('layouts/footer');-%>
        
        <!-- Bootstrap core JS-->

        <%-include('layouts/scripts');-%>
    </body>
</html>